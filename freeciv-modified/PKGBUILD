pkgname=freeciv
pkgver=3.2.0
pkgrel=1
pkgdesc="A multiuser clone of the famous Microprose game of Civilization (major clients with rule editor)"
arch=('x86_64')
url="http://www.freeciv.org/"
license=('GPL-2.0-or-later')
depends=(
  'bzip2'
  'cairo'
  'curl'
  'gdk-pixbuf2'
  'glib2'
  'glibc'
  'gtk3'
  'gtk4'
  'qt6-base'
  'hicolor-icon-theme'
  'icu'
  'libtool'
  'lua'
  'pango'
  'readline'
  'sdl2-compat'
  'sdl2_mixer'
  'sqlite'
  'xz'
  'zlib'
  'zstd'
)
makedepends=('python')
groups=('modified')
backup=('etc/freeciv/database.lua')
source=("https://files.freeciv.org/stable/$pkgname-$pkgver.tar.xz")
sha512sums=('03d4bdf0bece4858c5ab802fc54fa6b58cf72b5526baef04642aff4f048210304629cfe416f4d2c8550f234c563c21ab83af5f8e77bb50fc9f9b17ab8f9e21ce')

prepare() {
  cd $pkgname-$pkgver
  ./autogen.sh
}

build() {
  cd $pkgname-$pkgver
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --enable-shared \
    --enable-sys-lua \
    --enable-client=gtk3.22,sdl2,gtk4,qt \
    --enable-fcmp=gtk4,qt,cli \
    --enable-fcdb=sqlite3 \
    --enable-ruledit \
    --enable-sdl-mixer=sdl2 \
    --enable-aimodules
  make -j
}

check() {
  cd $pkgname-$pkgver
  make check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
